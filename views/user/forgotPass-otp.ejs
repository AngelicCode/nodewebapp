<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification - QuickSip</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 450px;
            width: 100%;
            position: relative;
        }

        .water-wave {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: linear-gradient(45deg, #4fc3f7, #29b6f6);
            clip-path: polygon(0 0, 100% 0, 100% 70%, 0 100%);
            z-index: 1;
        }

        .content {
            position: relative;
            z-index: 2;
            padding: 120px 40px 40px;
            text-align: center;
        }

        .bottle-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(45deg, #4fc3f7, #29b6f6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            box-shadow: 0 10px 30px rgba(79, 195, 247, 0.3);
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        .bottle-icon i {
            font-size: 40px;
            color: white;
        }

        h3 {
            color: #2c3e50;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #7f8c8d;
            font-size: 16px;
            margin-bottom: 40px;
        }

        .otp-container {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 16px;
        }

        .otp-input-wrapper {
            position: relative;
        }

        #otp {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid #e8f4fd;
            border-radius: 12px;
            font-size: 18px;
            text-align: center;
            letter-spacing: 3px;
            transition: all 0.3s ease;
            background: #f8fdff;
        }

        #otp:focus {
            outline: none;
            border-color: #4fc3f7;
            box-shadow: 0 0 20px rgba(79, 195, 247, 0.2);
            background: white;
        }

        .btn {
            border: none;
            border-radius: 12px;
            padding: 15px 30px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            position: relative;
            overflow: hidden;
        }

        .btn-primary {
            background: linear-gradient(45deg, #4fc3f7, #29b6f6);
            color: white;
            width: 100%;
            box-shadow: 0 10px 30px rgba(79, 195, 247, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(79, 195, 247, 0.4);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .otp-timer-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px 0;
        }

        .otp-timer {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 3px solid #4fc3f7;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            font-weight: 700;
            color: #2c3e50;
            position: relative;
            animation: pulse 2s ease-in-out infinite;
            transition: background 0.3s ease;

            
        }

        @keyframes pulse {
            0%, 100% { box-shadow: 0 0 0 0 rgba(79, 195, 247, 0.4); }
            50% { box-shadow: 0 0 0 10px rgba(79, 195, 247, 0); }
        }

        .timer-label {
            position: absolute;
            bottom: -25px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 12px;
            color: #7f8c8d;
            font-weight: 500;
        }

        .btn-link {
            background: transparent;
            color: #4fc3f7;
            border: 2px solid #4fc3f7;
            padding: 12px 25px;
        }

        .btn-link:hover {
            background: #4fc3f7;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(79, 195, 247, 0.3);
        }

        .alert {
            padding: 15px;
            border-radius: 12px;
            margin-top: 20px;
            display: none;
        }

        .alert-danger {
            background: linear-gradient(45deg, #ff6b6b, #ee5a52);
            color: white;
            border: none;
        }

        .login-link {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
        }

        .login-link a {
            color: #4fc3f7;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .login-link a:hover {
            color: #29b6f6;
            text-decoration: underline;
        }

        .droplets {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
        }

        .droplet {
            position: absolute;
            background: rgba(79, 195, 247, 0.3);
            border-radius: 50%;
            animation: fall linear infinite;
        }

        @keyframes fall {
            to {
                transform: translateY(100vh);
                opacity: 0;
            }
        }

        .water-ripple {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 60px;
            height: 60px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            animation: ripple 2s ease-out infinite;
        }

        @keyframes ripple {
            0% { transform: scale(0.8); opacity: 1; }
            100% { transform: scale(2); opacity: 0; }
        }

        .form-buttons {
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
        }

        @media (max-width: 480px) {
            .content {
                padding: 100px 20px 20px;
            }
            
            .container {
                margin: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="droplets" id="droplets"></div>
    
    <div class="container">
        <div class="water-wave">
            <div class="water-ripple"></div>
        </div>
        
        <div class="content">
            <div class="bottle-icon">
                <i class="fas fa-tint"></i>
            </div>
            
            <h3>Email Verification</h3>
            <p class="subtitle">Pure authentication, crystal clear security</p>
            
            <div class="otp-container">
                <form onsubmit="return validateOtpForm()">
                    <div class="form-group">
                        <label for="otp">
                            <i class="fas fa-shield-alt" style="margin-right: 8px; color: #4fc3f7;"></i>
                            Enter Your OTP Code
                        </label>
                        <div class="otp-input-wrapper">
                            <input type="text" id="otp" name="otp" placeholder="• • • • • •" maxlength="6" required>
                        </div>
                    </div>
                    
                    <div class="otp-timer-wrapper">
                        <div class="otp-timer" id="otpTimer">
                            60
                            <span class="timer-label">seconds</span>

                        </div>
                    </div>
                    
                    <div class="form-buttons">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check-circle" style="margin-right: 8px;"></i>
                            Verify OTP
                        </button>
                        
                        <button type="button" class="btn btn-link" onclick="resendOtp()">
                            <i class="fas fa-redo-alt" style="margin-right: 8px;"></i>
                            Resend OTP
                        </button>
                    </div>
                </form>
                <%if(locals.message && message.length > 0){%>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle" style="margin-right: 8px;"></i>
                    <span id="error-message"><%=message%></span>
                </div>
                <%}%>
            </div>
            
            <div class="login-link">
                <i class="fas fa-water" style="margin-right: 8px; color: #4fc3f7;"></i>
                Already verified? <a href="/login">Dive into your account</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      
        let otpTimerInterval;
        let timer = 60; // Default timer value

function updateTimerColor(percentage) {
  const timerElement = document.getElementById("otpTimer");
  if (percentage > 50) {
    timerElement.style.backgroundColor = "#28a745"; // Green
  } else if (percentage > 25) {
    timerElement.style.backgroundColor = "#ffc107"; // Yellow
  } else {
    timerElement.style.backgroundColor = "#dc3545"; // Red
  }
}

function startOtpTimer(duration = 60) {
  // Clear any existing timer
  if (otpTimerInterval) {
    clearInterval(otpTimerInterval);
  }
  
  // Reset timer
  timer = duration;
  const timerElement = document.getElementById("otpTimer");
  
  // Initial display
  const minutes = Math.floor(timer / 60);
  const seconds = timer % 60;
  timerElement.textContent = `${minutes}:${seconds < 10 ? "0" : ""}${seconds}`;
  updateTimerColor(100); // Start at 100%
  
  // Start new timer
  otpTimerInterval = setInterval(function() {
    const minutes = Math.floor(timer / 60);
    const seconds = timer % 60;
    timerElement.textContent = `${minutes}:${seconds < 10 ? "0" : ""}${seconds}`;
    updateTimerColor((timer / duration) * 100);
    
    if (--timer < 0) {
      clearInterval(otpTimerInterval);
      timerElement.textContent = "Expired";
      timerElement.style.backgroundColor = "red";
      timerElement.style.cursor = "pointer";
      
      // Make it clickable to restart
      timerElement.onclick = function() {
        startOtpTimer(duration); // Restart with same duration
        timerElement.style.cursor = "default";
        timerElement.onclick = null;
      };
    }
  }, 1000);
}


startOtpTimer();


// startOtpTimer(60); // Will reset to 60 seconds

  function validateOtpForm(){
    const otpInput = document.getElementById("otp").value;
    $.ajax({
      type:"POST",
      url:"/verify-passForgot-otp",
      data:{otp:otpInput},
      success: function (response){
      if(response.success){
        Swal.fire({
          icon:"success",
          title:"OTP Verified Successfully",
          showConfirmButton:false,
          timer:1500

        }).then(()=>{
          window.location.href = response.redirectUrl;
        })
      }else{
        Swal.fire({
          icon:"error",
          title:"Invalid OTP",
          text:response.message
        })
      }},error: function (){
        Swal.fire({
          icon:"error",
          title:"Error",
          text:"Failed to verify OTP. Please try again"
        })
      }
    })
    return false;
  }

  function resendOtp(){
    clearInterval(otpTimerInterval);
    timer = 60;
    startOtpTimer();
    $.ajax({
      type:"POST",
      url:'/resend-forgot-otp',
      success:function(response){
        if(response.success){
          Swal.fire({
            icon:"success",
            title:"Resend OTP successfull",
            showConfirmButton:false,
            timer:1500,

          })
        }else{
          Swal.fire({
            icon:"error",
            title:"Error",
            text:"Failed to resend OTP.Please try again.",
          })
        }
      },
      error:function(){
        Swal.fire({
          icon:"error",
          title:"Error",
          text:"Failed to resend OTP."
        })
      }
    })

  }

    </script>
</body>
</html>