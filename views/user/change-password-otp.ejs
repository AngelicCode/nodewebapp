<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quick Sip - OTP Verification</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated water bubbles background */
        .bubble {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .bubble:nth-child(1) {
            width: 60px;
            height: 60px;
            left: 10%;
            animation-delay: 0s;
        }

        .bubble:nth-child(2) {
            width: 40px;
            height: 40px;
            left: 20%;
            animation-delay: 2s;
        }

        .bubble:nth-child(3) {
            width: 30px;
            height: 30px;
            left: 80%;
            animation-delay: 4s;
        }

        .bubble:nth-child(4) {
            width: 70px;
            height: 70px;
            left: 70%;
            animation-delay: 1s;
        }

        .bubble:nth-child(5) {
            width: 35px;
            height: 35px;
            left: 50%;
            animation-delay: 3s;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            50% {
                transform: translateY(-20px) rotate(180deg);
                opacity: 0.8;
            }
        }

        .container {
            max-width: 380px;
            width: 90%;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            padding: 35px 30px;
            text-align: center;
            position: relative;
            z-index: 10;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .logo {
            width: 60px;
            height: 60px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            box-shadow: 0 8px 25px rgba(79, 172, 254, 0.3);
        }

        .logo::before {
            content: '';
            position: absolute;
            width: 90%;
            height: 90%;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            border-radius: 50%;
            z-index: -1;
        }

        .logo i {
            font-size: 28px;
            color: white;
            z-index: 1;
        }

        .brand-name {
            font-size: 26px;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 8px;
            letter-spacing: -1px;
        }

        .subtitle {
            color: #7f8c8d;
            font-size: 14px;
            margin-bottom: 25px;
            font-weight: 400;
        }

        .form-title {
            font-size: 20px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .form-title i {
            color: #4facfe;
        }

        .otp-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            gap: 18px;
        }

        .form-group {
            width: 100%;
            text-align: center;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #2c3e50;
            font-size: 14px;
        }

        .input-container {
            position: relative;
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .input-container i {
            position: absolute;
            left: 15px;
            color: #7f8c8d;
            font-size: 16px;
            z-index: 2;
        }

        .form-control {
            width: 100%;
            padding: 14px 15px 14px 45px;
            border: 2px solid #e8ecf0;
            border-radius: 12px;
            font-size: 16px;
            background: #fafbfc;
            transition: all 0.3s ease;
            outline: none;
            font-weight: 600;
            text-align: center;
            letter-spacing: 2px;
        }

        .form-control:focus {
            border-color: #4facfe;
            background: white;
            box-shadow: 0 0 0 3px rgba(79, 172, 254, 0.1);
            transform: translateY(-2px);
        }

        .btn {
            padding: 14px 28px;
            border: none;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            box-shadow: 0 8px 25px rgba(79, 172, 254, 0.3);
            width: 100%;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(79, 172, 254, 0.4);
        }

        .btn-primary:active {
            transform: translateY(-1px);
        }

        .btn-link {
            background: transparent;
            color: #4facfe;
            border: 2px solid #4facfe;
            padding: 12px 25px;
            font-size: 13px;
            text-decoration: none;
            width: auto;
            display: inline-flex;
        }

        .btn-link:hover {
            background: #4facfe;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(79, 172, 254, 0.3);
        }

        .otp-timer-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 15px 0;
        }

        .otp-timer {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 65px;
            height: 65px;
            border-radius: 50%;
            background-color: #28a745;
            font-size: 14px;
            color: white;
            text-align: center;
            font-weight: 700;
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
            transition: all 0.3s ease;
        }

        .alert {
            padding: 12px 16px;
            margin-top: 15px;
            border-radius: 10px;
            font-weight: 500;
            text-align: center;
        }

        .alert-danger {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        .login-link {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e8ecf0;
            color: #7f8c8d;
            font-size: 13px;
        }

        .login-link a {
            color: #4facfe;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .login-link a:hover {
            color: #2196f3;
        }

        .water-drop {
            position: absolute;
            width: 15px;
            height: 15px;
            background: rgba(79, 172, 254, 0.3);
            border-radius: 50% 50% 50% 0;
            transform: rotate(-45deg);
            animation: drop 3s ease-in-out infinite;
        }

        .water-drop:nth-child(1) {
            top: 15px;
            right: 25px;
            animation-delay: 0s;
        }

        .water-drop:nth-child(2) {
            top: 45px;
            right: 45px;
            animation-delay: 1s;
        }

        .water-drop:nth-child(3) {
            bottom: 30px;
            left: 30px;
            animation-delay: 2s;
        }

        @keyframes drop {
            0%, 100% { opacity: 0; transform: rotate(-45deg) translateY(0); }
            50% { opacity: 1; transform: rotate(-45deg) translateY(-10px); }
        }

        @media (max-width: 480px) {
            .container {
                padding: 30px 20px;
                margin: 15px;
                max-width: 320px;
            }

            .brand-name {
                font-size: 22px;
            }

            .form-title {
                font-size: 18px;
            }

            .btn {
                padding: 12px 25px;
                font-size: 13px;
            }

            .otp-timer {
                width: 55px;
                height: 55px;
                font-size: 12px;
            }

            .logo {
                width: 50px;
                height: 50px;
            }

            .logo i {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>

    <div class="container">
        <div class="water-drop"></div>
        <div class="water-drop"></div>
        <div class="water-drop"></div>
        
        <div class="logo">
            <i class="fas fa-tint"></i>
        </div>
        
        <h1 class="brand-name">Quick Sip</h1>
        
        <h3 class="form-title">
            <i class="fas fa-shield-alt"></i>
            Email Verification
        </h3>
        
        <div class="otp-container">
            <form onsubmit="return validateOtpForm()">
                <div class="form-group">
                    <label for="otp">Enter OTP:</label>
                    <div class="input-container">
                        <i class="fas fa-key"></i>
                        <input type="text" id="otp" name="otp" class="form-control" required placeholder="Enter 6-digit OTP">
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check-circle"></i>
                        Verify OTP
                    </button>
                </div>
            </form>
            
            <div class="form-group otp-timer-wrapper">
                <div class="otp-timer" id="otpTimer"></div>
            </div>
            
            <div class="form-group">

                <button type="button" class="btn btn-link" id="resendBtn" style="display: none;" onclick="resendOtp()">
                <i class="fas fa-redo"></i>
                Resend OTP
                </button>
            </div>
            
            <div id="message-container">
                <!-- Message will be displayed here -->
            </div>
        </div>
        
        <div class="login-link">
            Already verified? <a href="/login">Login now</a>
        </div>
    </div>

    <script>
        let otpTimerInterval;
        let timer = 60;

        function updateTimerColor(percentage) {
            const timerElement = document.getElementById('otpTimer');
            if (percentage > 50) {
                timerElement.style.backgroundColor = '#28a745';
                timerElement.style.boxShadow = '0 8px 25px rgba(40, 167, 69, 0.3)';
            } else if (percentage > 25) {
                timerElement.style.backgroundColor = '#ffc107';
                timerElement.style.boxShadow = '0 8px 25px rgba(255, 193, 7, 0.3)';
            } else {
                timerElement.style.backgroundColor = '#dc3545';
                timerElement.style.boxShadow = '0 8px 25px rgba(220, 53, 69, 0.3)';
            }
        }

        function startOtpTimer() {
            const timerElement = document.getElementById('otpTimer');
            const resendBtn = document.getElementById('resendBtn');
            resendBtn.style.display = 'none';  

            otpTimerInterval = setInterval(function() {
                const minutes = Math.floor(timer / 60);
                const seconds = timer % 60;
                timerElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
                updateTimerColor((timer / 60) * 100);

                if (--timer < 0) {
                    clearInterval(otpTimerInterval);
                    timerElement.textContent = 'Expired';
                    timerElement.style.backgroundColor = 'red';
                    timerElement.style.boxShadow = '0 8px 25px rgba(255, 0, 0, 0.3)';
                    resendBtn.style.display = 'inline-flex';  
                }
            }, 1000);
        }


        function initializeOtpTimer() {
            clearInterval(otpTimerInterval);
            timer = 60;
            startOtpTimer();
        }

        function validateOtpForm() {
            const otpInput = document.getElementById('otp').value;

            $.ajax({
                type: 'POST',
                url: '/verify-changepassword-otp', 
                data: {
                    otp: otpInput
                },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'OTP Verified',
                            text: 'OTP verified successfully!',
                            timer: 1500,
                            showConfirmButton: false
                        });
                        setTimeout(() => {
                            window.location.href = response.redirectUrl; 
                        }, 1500);
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Invalid OTP',
                            text: response.message || 'Incorrect OTP. Please try again.'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Server Error',
                        text: 'Something went wrong. Try again.'
                    });
                }
            });

            return false; 
        }

        function resendOtp() {
            clearInterval(otpTimerInterval);
            timer = 60;
            startOtpTimer();
            
            const messageContainer = document.getElementById('message-container');
            Swal.fire({
                icon: 'success',
                title: 'OTP Resent',
                text: 'OTP has been resent successfully!',
                timer: 1500,
                showConfirmButton: false
            });
            
            setTimeout(() => {
                messageContainer.innerHTML = '';
            }, 1000);
        }

        initializeOtpTimer();
    </script>
</body>
</html>