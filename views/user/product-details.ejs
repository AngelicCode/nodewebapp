                            <div class="main-product-image-container" id="imageContainer">
                                <div class="main-product-image" id="zoomContainer">
                                    <img id="mainProductImage" src="/Uploads/product-images/<%=product.productImage[0]%>" alt="<%=product.productName%>">
                                </div>
                            </div>

                            <div class="thumbnail-slider">
                                <% for(let i=0; i<product.productImage.length; i++) { %>
                                    <div class="thumbnail-item <%= i === 0 ? 'active' : '' %>" data-index="<%=i%>">
                                        <img src="/Uploads/product-images/<%=product.productImage[i]%>" alt="Thumbnail <%=i+1%>">
                                    </div>
                                <% } %>
                            </div>

                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="detail-info">
                            <h1 class="product-title"><%=product.productName%></h1>
                              
                            <div class="brand-rating">
                                <div class="brand-info">
                                    <% if(product.brand) { %>
                                        <span class="brand-label">Brand:</span>
                                        <div class="brand-details">
                                            <% if(product.brand.brandImage && product.brand.brandImage.length > 0) { %>
                                                <img src="/uploads/product-images/<%= product.brand.brandImage[0] %>" 
                                                     alt="<%= product.brand.brandName %> logo" 
                                                     class="brand-logo">
                                            <% } %>

                                            <a class="brand-name">
                                                <%= product.brand.brandName %>
                                            </a>

                                        </div>
                                    <% } else { %>
                                        <span class="no-brand">No brand specified</span>
                                    <% } %>
                                </div>

                                <div class="rating-info">
                                    <div class="product-rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                    </div>

                                    <span class="review-count">(25 reviews)</span>
                                </div>
                            </div>
                            
                            <div class="price-container">
                                <div class="current-price">‚Çπ<%=product.salePrice%></div>
                                <div class="price-details">
                                    <span class="original-price">‚Çπ<%=product.regularPrice%></span>
                                    <% if(totalOffer) { %>
                                        <span class="discount-badge"><%=totalOffer%>% OFF</span>
                                    <% } %>
                                </div>
                            </div>

                            <div class="stock-label">
                              <% if (quantity === 0) { %>
                                <span class="out-of-stock">Out of Stock</span>
                              <% } %>
