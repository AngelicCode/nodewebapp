                                    <i class="fas fa-shopping-cart"></i> Add to Cart
                                    </button>
                                        <% } %>
                                    <%}else{%>
                                        <button style="background-color:yellow; color: black;" class="add-to-cart-btn" disabled>Sold Out</button>
                                        <%}%>
                                        
                                    <button class="wishlist-btn <%= wishlistProductIds && wishlistProductIds.includes(product._id.toString()) ? 'active' : '' %>" onclick="toggleWishlist(event, '<%=product._id%>', this)">
                                    <span class="heart-icon">
                                    <%= wishlistProductIds && wishlistProductIds.includes(product._id.toString()) ? '‚ô•' : '‚ô°' %>
