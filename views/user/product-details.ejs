                                      <% if (cartProductIds && cartProductIds.includes(product._id.toString())) { %>
                                        <a href="/cart" class="go-to-cart-btn" style="background:#2e4319; color: white;">
                                        <i class="fas fa-shopping-cart"></i> Go to Cart
                                        </a>  
