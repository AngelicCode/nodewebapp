                                    <div class="feature-item">
                                        <div class="feature-icon">üíß</div>
                                        <span>Easy-to-Clean</span>
                                    </div>
                                </div>
                            </div>

                            <div class="product-meta">
                                <div class="meta-item">
                                    <span class="meta-label">Stock Code:</span>
                                    <span class="meta-value">HYD<%=product._id.toString().slice(-4).toUpperCase()%></span>
                                </div>
