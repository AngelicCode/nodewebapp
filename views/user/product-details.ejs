<script>
class InPlaceImageZoom {
    constructor() {
        this.zoomContainer = null;
        this.mainImage = null;
        this.isZoomActive = false;
        this.zoomLevel = 2.5;
    }

    init() {
        this.zoomContainer = document.getElementById('zoomContainer');
        this.mainImage = document.getElementById('mainProductImage');
        
        if (!this.zoomContainer || !this.mainImage) {
            console.error("Zoom elements not found");
            return false;
        }

        this.setupZoom();
        return true;
    }

    setupZoom() {
        if (this.mainImage.complete) {
            this.initializeZoomEffect();
        } else {
            this.mainImage.onload = () => this.initializeZoomEffect();
            this.mainImage.onerror = () => console.error("Failed to load image for zoom");
        }
    }

    initializeZoomEffect() {
        this.zoomContainer.addEventListener('mousemove', (e) => this.handleMouseMove(e));
        this.zoomContainer.addEventListener('mouseenter', () => this.showZoom());
        this.zoomContainer.addEventListener('mouseleave', () => this.hideZoom());
        
        this.zoomContainer.addEventListener('touchstart', (e) => this.handleTouchStart(e));
        this.zoomContainer.addEventListener('touchmove', (e) => this.handleTouchMove(e));
        this.zoomContainer.addEventListener('touchend', () => this.hideZoom());
    }

    showZoom() {
        this.isZoomActive = true;
        this.mainImage.classList.add('zoom-active');
        this.zoomContainer.classList.add('zoomed');
    }

    hideZoom() {
        this.isZoomActive = false;
        this.mainImage.classList.remove('zoom-active');
        this.zoomContainer.classList.remove('zoomed');
        this.mainImage.style.transformOrigin = 'center';
    }

    handleMouseMove(e) {
        if (!this.isZoomActive) return;
        
        e.preventDefault();
        const rect = this.zoomContainer.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;
        
        this.mainImage.style.transformOrigin = `${x}% ${y}%`;
    }

    handleTouchStart(e) {
        e.preventDefault();
        this.showZoom();
    }

    handleTouchMove(e) {
        if (!this.isZoomActive) return;
        
        e.preventDefault();
        const touch = e.touches[0];
        const rect = this.zoomContainer.getBoundingClientRect();
        const x = ((touch.clientX - rect.left) / rect.width) * 100;
        const y = ((touch.clientY - rect.top) / rect.height) * 100;
        
        this.mainImage.style.transformOrigin = `${x}% ${y}%`;
    }

    reinitialize() {
        setTimeout(() => {
            this.setupZoom();
        }, 100);
    }
}

