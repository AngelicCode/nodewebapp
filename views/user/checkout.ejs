    async function processPayment() {
        const btn = document.querySelector('.btn-primary');
        btn.innerHTML = '‚è≥ Processing...';
        btn.disabled = true;

        try {
            const paymentMethod = document.querySelector('.payment-method.active')?.dataset.method;
            const addressInputs = document.querySelectorAll('input[name="selectedAddress"]');
            const addressId = document.querySelector('input[name="selectedAddress"]:checked')?.value;
            const orderTotal = parseFloat(document.getElementById('total').textContent.replace('‚Çπ', ''));

            if (addressInputs.length === 0) {
                throw new Error('No saved addresses found. Please add a shipping address before proceeding.');
            }

            if (!addressId) {
                throw new Error('Please select a shipping address');
            }

            if (paymentMethod === 'cod' && orderTotal > 1000) {
                btn.innerHTML = 'Complete Order';
                btn.disabled = false;
                showCodRestrictionAlert(orderTotal);
                return;
            }

            if (paymentMethod === 'wallet') {
                const orderTotal = parseFloat(document.getElementById('total').textContent.replace('‚Çπ', ''));
                if (userWalletBalance < orderTotal) {
                    btn.innerHTML = 'Complete Order';
                    btn.disabled = false;
                    showInsufficientBalanceAlert(userWalletBalance, orderTotal);
                    return;
                }
            }

            const orderData = {
                addressId: addressId,
                paymentMethod: paymentMethod,
                cartItems: <%- JSON.stringify(cartItems) %>,
                subtotal: parseFloat(document.getElementById('subtotal').textContent.replace('‚Çπ', '')),
                discountedSubtotal: parseFloat(document.getElementById('discounted-subtotal')?.textContent.replace('‚Çπ', '') || document.getElementById('subtotal').textContent.replace('‚Çπ', '')),
                totalSavings: parseFloat(document.getElementById('total-savings')?.textContent.replace('‚Çπ', '') || 0),
                shipping: parseFloat(document.getElementById('shipping').textContent.replace('‚Çπ', '')),
                tax: parseFloat(document.getElementById('tax').textContent.replace('‚Çπ', '')),
                total: parseFloat(document.getElementById('total').textContent.replace('‚Çπ', '')),
                total: orderTotal,
                coupon: appliedCoupon ? {
                    code: appliedCoupon.code,
                    discountAmount: appliedCoupon.discountAmount
                } : null
            };

            const response = await fetch('/place-order', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(orderData)
            });

            const result = await response.json();

            if (result.blocked) {
                window.location.href = "/login";
                return;
            }

            if (!response.ok) {
                if (result.errors && result.errors.length > 0) {
                    showValidationErrorAlert(result.errors, result.validItems);
                    btn.innerHTML = 'Complete Order';
                    btn.disabled = false;
                    return;
                } else {
                    window.location.href = '/order-failure?reason=order_creation_failed';
                    return;
                }
            }

            if (!result.status) {
                window.location.href = '/order-failure?reason=order_creation_failed';
                return;
            }

            if (paymentMethod === 'razorpay') {
                await initiateRazorpayPayment(orderData, result.razorpayOrder);
            } else {
                if (!result.orderId) {
                    window.location.href = '/order-failure?reason=order_id_missing';
                    return;
                }
                updateCartAfterCheckout();
                window.location.href = `/order-success/${result.orderId}`;
            }

        } catch (error) {
            console.error('Order error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: error.message || 'Something went wrong while processing your order. Please try again.',
            });
            btn.innerHTML = 'Complete Order';
            btn.disabled = false;
        }
    }


