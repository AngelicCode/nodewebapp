<%- include("../../views/partials/user/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quick Sip - Shopping Cart</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f8fdff 0%, #e8f8ff 100%);
            color: #2c3e50;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header */
        .page-header {
            background: linear-gradient(135deg, white 0%, white 100%);
            padding: 60px 0 -3px;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            
        }

        @keyframes wave {
            0% { background-position-x: 0; }
            100% { background-position-x: 200px; }
        }

        .page-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 20px;
            position: relative;
            z-index: 2;
        }

        .breadcrumb {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            position: relative;
            z-index: 2;
            background-color: #849bb1;
        }

        .breadcrumb a {
            color: rgba(227, 228, 228, 0.9);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .breadcrumb a:hover {
            color: white;
        }

        .breadcrumb span {
            color: rgba(255, 255, 255, 0.6);
        }

        /* Main Content */
        .main-content {
            padding: 50px 0;
        }

        .cart-section {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 40px;
            align-items: start;
        }

        /* Cart Items */
        .cart-items {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .cart-header {
            background: linear-gradient(135deg, #34495e 0%, #45617d 100%);
            color: white;
            padding: 25px 30px;
            font-size: 1.3rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .cart-item {
            display: grid;
            grid-template-columns: 100px 1fr 120px 150px 60px;
            gap: 20px;
            padding: 30px;
            border-bottom: 1px solid #ecf0f1;
            align-items: center;
            transition: background 0.3s ease;
        }

        .cart-item:hover {
            background: #f8fbff;
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .product-image {
            width: 80px;
            height: 80px;
            border-radius: 12px;
            object-fit: cover;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .product-info h5 {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .product-info p {
            color: #7f8c8d;
            font-size: 0.9rem;
            margin: 2px 0;
        }

        .price-info {
            text-align: center;
        }

        .price-main {
            font-size: 1.2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .price-per-item {
            font-size: 0.85rem;
            color: #95a5a6;
        }

        /* Quantity Controls */
        .quantity-control {
            display: flex;
            align-items: center;
            background: #f8f9fa;
            border-radius: 25px;
            padding: 5px;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .quantity-btn {
            width: 35px;
            height: 35px;
            border: none;
            background: #71cd14;
            color: white;
            border-radius: 50%;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-btn:hover {
            background: #5cb012;
            transform: scale(1.1);
        }

        .quantity-btn:active {
            transform: scale(0.95);
        }

        .quantity-input {
            width: 50px;
            text-align: center;
            border: none;
            background: transparent;
            font-weight: 600;
            font-size: 1rem;
            color: #2c3e50;
            margin: 0 8px;
        }

        .remove-btn {
            width: 40px;
            height: 40px;
            border: none;
            background: #e74c3c;
            color: white;
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .remove-btn:hover {
            background: #c0392b;
            transform: scale(1.1);
        }

        /* Empty Cart */
        .empty-cart {
            text-align: center;
            padding: 80px 30px;
            color: #7f8c8d;
        }

        .empty-cart i {
            font-size: 4rem;
            margin-bottom: 20px;
            color: #bdc3c7;
        }

        .empty-cart h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        /* Cart Summary */
        .cart-summary {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 20px;
        }

        .summary-header {
            background: linear-gradient(135deg, #71cd14 0%, #5cb012 100%);
            color: white;
            padding: 25px 30px;
            border-radius: 20px 20px 0 0;
            font-size: 1.3rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .summary-content {
            padding: 30px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #ecf0f1;
        }

        .summary-row:last-of-type {
            border-bottom: 2px solid #71cd14;
            font-weight: 700;
            font-size: 1.2rem;
            color: #2c3e50;
            margin-top: 10px;
            padding-top: 20px;
        }

        .shipping-badge {
            background: linear-gradient(135deg, #71cd14 0%, #5cb012 100%);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .checkout-btn {
            width: 100%;
            background: linear-gradient(135deg, #71cd14 0%, #5cb012 100%);
            color: white;
            border: none;
            padding: 18px 25px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
        }

        .checkout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(113, 205, 20, 0.3);
        }

        /* Responsive */
        @media (max-width: 968px) {
            .cart-section {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .cart-item {
                grid-template-columns: 80px 1fr;
                gap: 15px;
                padding: 20px;
            }

            .price-info, .quantity-control, .remove-btn {
                grid-column: 2;
                margin-top: 15px;
            }

            .quantity-control {
                justify-self: start;
                margin-right: 15px;
            }

            .remove-btn {
                justify-self: end;
                margin-top: -40px;
            }
        }

        @media (max-width: 640px) {
            .page-header h1 {
                font-size: 2rem;
            }

            .container {
                padding: 0 15px;
            }

            .cart-items, .cart-summary {
                border-radius: 15px;
            }

            .cart-header, .summary-header {
                padding: 20px 25px;
                font-size: 1.1rem;
            }

            .summary-content {
                padding: 25px;
            }
        }

        @keyframes droplet {
            0%, 100% { transform: translateY(0px) scale(1); }
            50% { transform: translateY(-10px) scale(1.1); }
        }

        .water-icon {
            animation: droplet 3s ease-in-out infinite;
        }

        .cart-item.out-of-stock-card {
            opacity: 0.7;
            background: #f8d7da;
            position: relative;
            filter: grayscale(1);
        }

        .cart-item.out-of-stock-card > *:not(.remove-btn) {
            pointer-events: none;
            user-select: none;
            opacity: 0.6;
        }

        .cart-item.out-of-stock-card .remove-btn {
            pointer-events: auto !important;
            opacity: 1;
            cursor: pointer;
            background: #e74c3c !important;
            transition: all 0.3s ease;
            color: white !important;
            
        }

        .cart-item.out-of-stock-card .remove-btn:hover {
            background: #c0392b !important;
            transform: scale(1.1) !important;
        }

        .out-of-stock-overlay {
            position: absolute;
            left: 0; top: 0; right: 0; bottom: 0;
            background: rgba(220, 53, 69, 0.25); /* match "danger" color */
            z-index: 10;
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: none;
        }

        .out-of-stock-text {
            color: #d40029;
            font-weight: bold;
            font-size: 2rem;
            padding: 10px 28px;
            border: 3px solid #d40029;
            background: rgba(255,255,255,0.97);
            border-radius: 18px;
            box-shadow: 0 5px 20px rgba(244,67,54,0.14);
            letter-spacing: 5px;
            text-transform: uppercase;
            transform: rotate(-6deg);
            pointer-events: none;
            user-select: none;
        }

    </style>
</head>
<body>
    
    <div class="page-header">
        <div class="container">
            <h1 style="margin-top: 15px;"><i class="fas fa-tint water-icon"></i> Your Cart</h1>
            <div class="breadcrumb">
                <a href="/"><i class="fas fa-home"></i> Home</a>
                <span><i class="fas fa-chevron-right"></i></span>
                <a href="/shop">Shop</a>
                <span><i class="fas fa-chevron-right"></i></span>
                <span>Your Cart</span>
            </div>
        </div>
    </div>

    <main class="main-content">
        <div class="container">
            <div class="cart-section">
                <div class="cart-items">
                    <div class="cart-header">
                        <i class="fas fa-shopping-cart"></i>
                        Cart Items
                    </div>
                    
                    <!-- Cart Items will be populated by EJS -->
                     <% let x = 0; %>
                    <% if (data.length > 0) { %>
                        <% for (let i = 0; i < data.length; i++) {  
                            var product = data[i];
                            const outOfStock = product.quantity <= 0; %>
                        <div class="cart-item<%= outOfStock ? " out-of-stock-card" : "" %>" <%= outOfStock ? 'data-outofstock="1"' : '' %>>
                            <% if (outOfStock) { %>
                                <div class="out-of-stock-overlay">
                                    <span class="out-of-stock-text">OUT OF STOCK</span>
                                </div>
                            <% } %>

                            <img src="/uploads/product-images/<%= product.productImage[0] %>" alt="<%= product.productName %>" class="product-image" <%= outOfStock ? "style='filter: grayscale(1) opacity(0.5)'" : "" %>>

                            <div class="product-info">
                                <h5><%= product.productName %></h5>
                                <p><i class="fas fa-tag"></i> <%= product.category && product.category.name %></p>
                                <p><i class="fas fa-industry"></i> <%= product.brand && product.brand.brandName %></p>
                            </div>
                            <div class="price-info">
                                <div class="price-main" id="subTotal<%= i%>">
                                    ₹<span><%= product.cartTotal %></span>
                                </div>
                                <div class="price-per-item">
                                    ₹<%= product.salePrice %> / item
                                </div>
                            </div>
                            <div class="quantity-control">
                                <button class="quantity-btn" 
                                    onclick="changeQuantity('<%= product._id %>', <%= i %>, -1, <%= product.salePrice %>, <%= product.quantity %>)"
                                    <%= outOfStock ? "disabled" : "" %>>
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input id="cartProductQuantity<%= i %>" class="quantity-input"
                                    value="<%= product.cartQuantity %>" readonly
                                    <%= outOfStock ? "disabled" : "" %>>
                                <button class="quantity-btn"
                                    onclick="changeQuantity('<%= product._id %>', <%= i %>, 1, <%= product.salePrice %>, <%= product.quantity %>)"
                                    <%= outOfStock ? "disabled" : "" %>>
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <button class="remove-btn" onclick="confirmRemove('<%= product._id %>')"><i class="fas fa-trash"></i>
                            </button>

                        </div>
                        <% } %>

                        <% } else { %>
                        <div class="empty-cart">
                            <i class="fas fa-shopping-cart"></i>
                            <h3>Your cart is empty</h3>
                            <p>Add some refreshing water bottles to get started!</p>
                        </div>
                    <% } %>
                    
                    <input type="hidden" id="totalabc" value="<%= x %>">
                </div>

                <div class="cart-summary">
                    <div class="summary-header">
                        <i class="fas fa-receipt"></i>
                        Order Summary
                    </div>
                    <div class="summary-content">
                        <div class="summary-row">
                            <span>Shipping</span>
                            <span class="shipping-badge">
                                <i class="fas fa-gift"></i>
                                ₹50.00
                            </span>
                        </div>
                        <div class="summary-row">
                            <span>Total</span>
                            <span>₹<span id="total"><%= grandTotal %></span></span>
                        </div>
                        
                        <a href="/checkout?userId=<%= user._id %>" class="checkout-btn" <%= grandTotal <= 0 ? 'style="pointer-events: none; opacity: 0.7;"' : '' %>>
                            <i class="fas fa-credit-card"></i>
                            Proceed to Checkout
                        </a>
                        <% if (data.length > 0 && grandTotal <= 0) { %>
                        <div class="alert alert-warning" style="margin: 20px; padding: 15px; border-radius: 10px; background: #fff3cd; color: #856404;">
                            <i class="fas fa-exclamation-triangle"></i> All items in your cart are currently out of stock. Please remove them or check back later.
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Pagination -->
    <%- include("../partials/user/pagination") %>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
       function changeQuantity(productId, idx, count, price, maxQuantity) {
        const MAX_CART_QTY = 5;
        const quantityInput = document.getElementById(`cartProductQuantity${idx}`);
        const subtotalElement = document.getElementById(`subTotal${idx}`);
        const totalElement = document.getElementById('total');

        if (!quantityInput || !subtotalElement || !totalElement) {
            console.error("Required elements not found in DOM");
            return;
        }

        let currentQuantity = parseInt(quantityInput.value);
        let currentSubtotal = parseFloat(subtotalElement.textContent);
        let newQuantity = currentQuantity + count;
        
        if (newQuantity < 1) return; 

        if (newQuantity > MAX_CART_QTY) {
                Swal.fire({
                    title: 'Limit Exceeded!',
                    text: 'You cannot add more than 5 units of this product.',
                    icon: 'warning',
                    timer: 2500,
                    showConfirmButton: false,
                });
                return;
            }

        if (newQuantity > maxQuantity) {
            Swal.fire({
            title: 'Out of Stock!',
            text: 'You cannot add more than available stock.',
            icon: 'error',
            timer: 3000,
            showConfirmButton: false,
    
            });
            return;
        }

        // Submit AJAX to backend
        $.ajax({
            url: '/changeQuantity',
            method: 'POST',
            data: {
                productId,
                count,
            },
            success: (response) => {
                if(response.status){
                    totalElement.textContent = response.grandTotal.toFixed(2);

                    quantityInput.value = response.quantity;
                    subtotalElement.textContent = parseFloat(response.totalPrice).toFixed(2);

                    // If server says stock is zero, disable the card in UI
                    if (response.quantity === 0 || response.message === 'Product out of stock' || response.stock === 0) {
                        disableCartCard(idx);
                    }
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: response.message || 'Failed to update quantity.',
                        icon: 'error',
                        timer: 3000,
                        showConfirmButton: false,
                        toast: true,
                       
                    });
                    quantityInput.value = currentQuantity;
                    subtotalElement.textContent = currentSubtotal.toFixed(2);

                    // If not allowed due to stock, instantly visually disable
                    if (response.message && response.message.toLowerCase().includes('stock')) {
                        disableCartCard(idx);
                    }
                }
            },
            error: () => {
            Swal.fire({
                title: 'Error',
                text: 'Something went wrong. Please try again.',
                icon: 'error',
                timer: 3000,
                showConfirmButton: false,
                
            });

            // Revert UI changes on error
            quantityInput.value = currentQuantity;
            subtotalElement.textContent = currentSubtotal.toFixed(2);
            }
        });

        function disableCartCard(idx) {
        const card = document.querySelectorAll('.cart-item')[idx];
        if (!card) return;
        card.classList.add('out-of-stock-card');
        if (!card.querySelector('.out-of-stock-overlay')) {
            const overlay = document.createElement('div');
            overlay.className = 'out-of-stock-overlay';
            overlay.innerHTML = `<span class="out-of-stock-text">OUT OF STOCK</span>`;
            card.appendChild(overlay);
        }

        card.querySelectorAll('button:not(.remove-btn), input').forEach(el => {
            el.disabled = true;
        
    });

    const removeBtn = card.querySelector('.remove-btn');
    if (removeBtn) removeBtn.disabled = false;
    removeBtn.style.pointerEvents = 'auto';
}
    }

        
        function confirmRemove(productId) {
            Swal.fire({
                title: 'Remove Item?',
                text: "Are you sure you want to remove this item from your cart?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e74c3c',
                cancelButtonColor: '#95a5a6',
                confirmButtonText: 'Yes, remove it!',
                cancelButtonText: 'Keep it'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/deleteItem?id=${productId}`;
                }
            })
        }

        // Add some smooth animations on load
        document.addEventListener('DOMContentLoaded', function() {
            const cartItems = document.querySelectorAll('.cart-item');
            cartItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    item.style.transition = 'all 0.5s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
    
    <style>
        /* Additional animations for better UX */
        .cart-item {
            transition: all 0.3s ease;
        }
        
        .swal2-popup {
            border-radius: 15px !important;
        }
        
        .swal2-confirm {
            background-color: #71cd14 !important;
            border-radius: 25px !important;
        }
        
        .swal2-cancel {
            border-radius: 25px !important;
        }
    </style>
</body>
</html>
<%- include("../../views/partials/user/footer") %>

