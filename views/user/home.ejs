  <!--================ New Product Area =================-->
  <section class="new_product_area section_gap_top section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>New Arrivals</span></h2>
                    <p>Discover our latest arrivals, crafted for every sip.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <%const sortedProducts = products.slice().sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
                
                const latestProducts = sortedProducts.slice(0, 4);%>
            
            <% latestProducts.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="single-product h-100">
                        <div class="product-img" style="height: 250px; overflow: hidden;">
                            <img class="img-fluid w-100 h-100 object-fit-cover"
                                src="/uploads/product-images/<%= product.productImage[0] %>" 
                                alt="<%= product.productName %>"
                            />
                            <div class="p_icon">
                                <a style="margin-left: 65px;" href="/productDetails?id=<%= product._id %>"><i class="ti-eye"></i></a>
                              
                            </div>
                        </div>
                        <div class="product-btm p-3 d-flex flex-column">
                            <h4 class="product-title"><%= product.productName %></h4>
                            <div class="price-section mt-auto">
                            <% if (product.bestOffer && product.bestOffer.percentage > 0) { %>
                                <span class="current-price">₹<%= product.bestOffer.finalPrice.toFixed(2) %></span>
                                <del class="original-price ml-2">₹<%= product.salePrice %></del>
                                <span class="discount-badge" style="background: #e74c3c; color: white; padding: 2px 8px; border-radius: 10px; font-size: 12px; margin-left: 5px;">
                                    <%= product.bestOffer.percentage %>% OFF
                                </span>
                            <% } else { %>
                                <span class="current-price">₹<%= product.salePrice %></span>
                                <% if (product.regularPrice && product.regularPrice > product.salePrice) { %>
                                    <del class="original-price ml-2">₹<%= product.regularPrice %></del>
                                <% } %>
                            <% } %>
                        </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>
  <!--================ End New Product Area =================-->

