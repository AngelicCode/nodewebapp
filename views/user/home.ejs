  <!--================ New Product Area =================-->
  <section class="new_product_area section_gap_top section_gap_bottom_custom">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="main_title">
            <h2><span>New Arrivals</span></h2>
            <p>Bring called seed first of third give itself now ment</p>
          </div>
        </div>
      </div>

      <div class="row">
        <% for (let i = 0; i < products.length; i++) { %>
          <div class="col-lg-3 col-md-4 col-sm-6 mt-4">
            <div class="single-product">
              <div class="product-img">
                <img class="img-fluid w-100" src="/uploads/product-images/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>" />
                <div class="p_icon">
                  <a href="/productDetails?id=<%= products[i]._id %>">
                    <i class="ti-eye"></i>
                  </a>
                  <a href="/addToWishlist?id=<%= products[i]._id %>">
                    <i class="ti-heart"></i>
                  </a>
                  <a href="/addToCart?id=<%= products[i]._id %>">
                    <i class="ti-shopping-cart"></i>
                  </a>
                </div>
              </div>
              <div class="product-btm">
                <a href="/productDetails?id=<%= products[i]._id %>" class="d-block">
                  <h4><%= products[i].productName %></h4>
                </a>
                <div class="mt-3">
                  <span class="mr-4">₹<%= products[i].salePrice %></span>
                  <% if (products[i].originalPrice && products[i].originalPrice > products[i].salePrice) { %>
                    <del>₹<%= products[i].originalPrice %></del>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>

    </div>
  </section>
