  <!-- Start feature Area -->
  <section class="feature-area section_gap_bottom_custom">
    <div class="container">
      <div class="row" style="display: flex; justify-content:space-evenly;">
        <div class="col-lg-3 col-md-6">
          <div class="single-feature">
            <a href="#" class="title">
