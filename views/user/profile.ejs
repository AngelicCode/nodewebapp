        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

        <script>
        // ---------------- TAB INITIALIZATION ----------------
        var triggerTabList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tab"]'));
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl);
            triggerEl.addEventListener('click', function (event) {
                event.preventDefault();
                tabTrigger.show();
            });
        });

        // ---------------- DELETE ADDRESS CONFIRMATION ----------------
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.delete-address-btn');
            
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const deleteUrl = this.getAttribute('href');
                    
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = deleteUrl;
                        }
                    });
                });
            });
        });

        // ---------------- TAB HANDLING & URL UPDATES ----------------
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const tab = urlParams.get('tab');
            const page = urlParams.get('page');
            
            if (tab === 'orders') {
                const tabEl = document.getElementById('orders-tab');
                new bootstrap.Tab(tabEl).show();
            }

            document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
                tab.addEventListener('click', function(e) {
                    const tabName = e.target.getAttribute('aria-controls').replace('-tab', '');
                    const url = new URL(window.location);
                    url.searchParams.delete('page'); 
                    url.searchParams.set('tab', tabName);
                    window.history.pushState({}, '', url);
                });
            });

            document.addEventListener('click', function(e) {
                if (e.target.closest('.pagination a')) {
                    e.preventDefault();
                    const url = new URL(e.target.href);
                    url.searchParams.set('tab', 'orders'); 
                    window.location.href = url.toString();
                }
            });
        });

        // ---------------- PROFILE PHOTO UPLOAD ----------------
        async function uploadProfilePhoto() {
            const fileInput = document.getElementById('profilePhotoInput');
            const formData = new FormData();
            formData.append('profilePhoto', fileInput.files[0]);

            try {
                const response = await fetch('/update-profile-photo', { method: 'POST', body: formData });
                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: result.message
                    }).then(() => location.reload());
                } else {
                    Swal.fire({ icon: 'error', title: 'Error', text: result.message });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({ icon: 'error', title: 'Error', text: 'An error occurred while uploading the photo' });
            }
        }

        // ---------------- REMOVE PROFILE PHOTO ----------------
        async function removeProfilePhoto() {
            try {
                const response = await fetch('/remove-profile-photo', { method: 'POST', headers: { 'Content-Type': 'application/json' } });
                const result = await response.json();

                if (result.success) {
                    document.getElementById('profileImage').src = '/images/default-avatar.png';
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: result.message
                    }).then(() => location.reload());
                } else {
                    Swal.fire({ icon: 'error', title: 'Error', text: result.message });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({ icon: 'error', title: 'Error', text: 'An error occurred while removing the photo' });
            }
        }

        // ---------------- WALLET TAB EVENTS ----------------
        document.addEventListener('DOMContentLoaded', function() {
            const walletTab = document.getElementById('track-orders-tab');
            const walletHistoryTab = document.getElementById('wallet-history-tab');
            
            walletTab.addEventListener('shown.bs.tab', loadWalletBalance);
            walletHistoryTab.addEventListener('shown.bs.tab', loadWalletHistory);
        });

        // ---------------- LOAD WALLET BALANCE ----------------
        async function loadWalletBalance() {
            try {
                const response = await fetch('/wallet-history');
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('walletBalance').textContent = `₹${data.walletBalance.toFixed(2)}`;
                }
            } catch (error) {
                console.error('Error loading wallet balance:', error);
            }
        }

        // ---------------- LOAD WALLET HISTORY + PAGINATION ----------------
        async function loadWalletHistory(page = 1) {
        try {
            const response = await fetch(`/wallet-history-data?page=${page}`);
            const data = await response.json();
            
            if (data.success) {
            const tableBody = document.getElementById('walletHistoryTable');
            tableBody.innerHTML = '';

            if (data.transactions.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="4" class="text-center">No transactions found</td></tr>';
                return;
            }

            data.transactions.forEach(transaction => {
                const row = document.createElement('tr');
                const date = new Date(transaction.createdAt).toLocaleDateString();
                const amountClass = transaction.type === 'credit' ? 'text-success' : 'text-danger';
                const typeBadge = transaction.type === 'credit'
                ? '<span class="badge bg-success">Credit</span>'
                : '<span class="badge bg-danger">Debit</span>';

                row.innerHTML = `
                <td>${date}</td>
                <td>${transaction.description}</td>
                <td class="${amountClass}">${transaction.type === 'credit' ? '+' : '-'}₹${transaction.amount.toFixed(2)}</td>
                <td>${typeBadge}</td>
                `;
                tableBody.appendChild(row);
            });

            renderWalletPagination(data.totalPages, data.currentPage);
            }
        } catch (error) {
            console.error('Error loading wallet history:', error);
        }
        }

        // ---------------- RENDER PAGINATION (GLASS STYLE) ----------------
        function renderWalletPagination(totalPages, currentPage) {
        const paginationContainer = document.getElementById('walletHistoryPagination');
        paginationContainer.innerHTML = '';

        const createPageLink = (page, text = null, active = false, disabled = false) => {
            const a = document.createElement('a');
            a.className = active ? 'active' : '';
            a.href = "#";
            a.textContent = text || page;
            if (disabled) a.style.pointerEvents = 'none';
            a.addEventListener('click', (e) => {
            e.preventDefault();
            loadWalletHistory(page);
            });
            return a;
        };

        const wrapper = document.createElement('div');
        wrapper.className = 'pagination-glass';

        if (currentPage > 1) {
            wrapper.appendChild(createPageLink(currentPage - 1, 'Prev'));
        }

        for (let i = 1; i <= totalPages; i++) {
            wrapper.appendChild(createPageLink(i, i, i === currentPage));
        }

        if (currentPage < totalPages) {
            wrapper.appendChild(createPageLink(currentPage + 1, 'Next'));
        }

        paginationContainer.appendChild(wrapper);
        }

        // ---------------- ADD MONEY TO WALLET ----------------
        async function addMoneyToWallet() {
            const amountInput = document.getElementById('addAmount');
            const amount = parseFloat(amountInput.value);
            
            if (!amount || amount <= 0) {
                Swal.fire('Error', 'Please enter a valid amount', 'error');
                return;
            }
            
            try {
                const response = await fetch('/add-to-wallet', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ amount })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    Swal.fire('Success', data.message, 'success');
                    amountInput.value = '';
                    loadWalletBalance();
                    loadWalletHistory();
                } else {
                    Swal.fire('Error', data.message, 'error');
                }
            } catch (error) {
                console.error('Error adding money:', error);
                Swal.fire('Error', 'Failed to add money to wallet', 'error');
            }
        }

        function copyReferralLink() {
            const referralLinkElement = document.getElementById('referralLink');
            if (referralLinkElement) {
                const referralLink = referralLinkElement.href;
                
                navigator.clipboard.writeText(referralLink).then(() => {
                    Swal.fire({
                        icon: 'success',
                        title: 'Copied!',
                        text: 'Referral link copied to clipboard',
                        timer: 2000,
                        showConfirmButton: false
                    });
                }).catch(err => {
                    console.error('Failed to copy: ', err);
                    const tempInput = document.createElement('input');
                    tempInput.value = referralLink;
                    document.body.appendChild(tempInput);
                    tempInput.select();
                    document.execCommand('copy');
                    document.body.removeChild(tempInput);
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Copied!',
                        text: 'Referral link copied to clipboard',
                        timer: 2000,
                        showConfirmButton: false
                    });
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Referral link not available'
                });
            }
        }

    </script>

