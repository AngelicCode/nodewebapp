                });
                const data = await response.json();

                if (data.blocked) {
                    Swal.fire({ icon:'warning', title:'Session Ended', text:'Admin has blocked you.' })
                    .then(()=> window.location.href="/login");
                    return;
                }

                if (data.success) {
                    Swal.fire({ icon:'success', title:'Removed', text:data.message })
                    .then(()=> location.reload());
                } else {
                    Swal.fire({ icon:'error', title:'Error', text:data.message });
                }
            } catch (error) {
                Swal.fire({ icon:'error', title:'Error', text:'Remove failed' });
            }
        }

        // ---------------- LOAD WALLET BALANCE ----------------

        async function loadWalletBalance() {
            try {
                const response = await fetch('/wallet-history');
                const data = await response.json();

                if (data.blocked) {
                    window.location.href="/login";
                    return;
                }

                if (data.success) {
                    document.getElementById('walletBalance').textContent = `₹${data.walletBalance.toFixed(2)}`;
                }
            } catch (error) {
                console.error('Wallet load error:', error);
            }
        }

        // ---------------- LOAD WALLET HISTORY ----------------

        async function loadWalletHistory(page = 1) {
            try {
                const response = await fetch(`/wallet-history-data?page=${page}`);
                const data = await response.json();

                if (data.blocked) {
                    window.location.href="/login";
                    return;
                }

                if (data.success) {
                    const tableBody = document.getElementById('walletHistoryTable');
                    tableBody.innerHTML = '';

                    if (data.transactions.length === 0) {
                        tableBody.innerHTML = '<tr><td colspan="4" class="text-center">No transactions found</td></tr>';
                        return;
                    }

                    data.transactions.forEach(transaction => {
                        const tr = document.createElement('tr');
                        const date = new Date(transaction.createdAt).toLocaleDateString();
                        tr.innerHTML = `
                            <td>${date}</td>
                            <td>${transaction.description}</td>
                            <td class="${transaction.type === 'credit' ? 'text-success' : 'text-danger'}">
                                ${transaction.type === 'credit' ? '+' : '-'}₹${transaction.amount.toFixed(2)}
                            </td>
                            <td><span class="badge bg-${transaction.type === 'credit' ? 'success' : 'danger'}">${transaction.type}</span></td>
                        `;
                        tableBody.appendChild(tr);
                    });

                    renderWalletPagination(data.totalPages, data.currentPage);
                }
            } catch (error) {
                console.error('Wallet history error:', error);
            }
        }

        // ---------------- ADD MONEY TO WALLET ----------------

        async function addMoneyToWallet() {
            const amount = parseFloat(document.getElementById('addAmount').value);
            if (!amount || amount <= 0) {
                return Swal.fire('Error', 'Enter valid amount', 'error');
            }

            try {
                const response = await fetch('/add-to-wallet', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ amount })
                });
                const data = await response.json();

                if (data.blocked) {
                    Swal.fire({ icon:'warning', title:'Session Ended', text:'Admin has blocked you.' })
                    .then(()=> window.location.href="/login");
                    return;
                }

                if (data.success) {
                    Swal.fire('Success', data.message, 'success');
                    loadWalletBalance();
                    loadWalletHistory();
                } else {
                    Swal.fire('Error', data.message, 'error');
                }
            } catch {
                Swal.fire('Error', 'Failed to add', 'error');
            }
        }

        // ---------------- RETRY PAYMENT FROM ORDERS ----------------

        async function retryPaymentFromOrders(orderId) {
            try {
                const res1 = await fetch(`/get-order-data/${orderId}`);
                const data1 = await res1.json();

                if (data1.blocked) {
                    window.location.href="/login";
                    return;
                }

                if (!data1.status) {
                    Swal.fire('Error', data1.message, 'error');
                    return;
                }

                const res2 = await fetch("/retry-payment", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ orderData: data1.orderData, orderId })
                });
                const data2 = await res2.json();

                if (data2.blocked) {
                    window.location.href="/login";
                    return;
                }

                if (!data2.status) {
                    Swal.fire({ icon:"error", title:"Retry Failed", text:data2.message });
                    return;
                }

                const rzp = new Razorpay({
                    key: data2.key_id,
                    order_id: data2.order.id,
                    amount: data2.order.amount,
                    currency: "INR",
                    handler: async function (response) {
                        await verifyPayment(response, data1.orderData);
