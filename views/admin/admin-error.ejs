  <%- include("../../views/partials/admin/header") %>

  <style>
    .content-main {
      min-height: calc(100vh - 130px);
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #f2f9ff;
      padding: 20px;
    }

    .error-container {
      background: #fff;
      padding: 40px 30px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      width: 100%;
      text-align: center;
    }

    .water-bottle-icon {
      font-size: 50px;
      color: #3399ff;
      margin-bottom: 20px;
    }

    h1 {
      color: #003366;
      margin-bottom: 15px;
      font-size: 28px;
      font-weight: 700;
    }

    p {
      color: #444;
      font-size: 16px;
      margin-bottom: 25px;
    }

    button {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 12px 24px;
      border-radius: 6px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #b30000;
    }
  </style>

  <section class="content-main">
    <div class="error-container">
      <div class="water-bottle-icon">
        <i class="fas fa-bottle-water"></i>
      </div>
      <h1>Oops! Something Went Wrong</h1>
      <p>An unexpected error occurred in the admin panel. Please try again or return to the dashboard.</p>
      <button onclick="goDashboard()">Back to Dashboard</button>
    </div>
  </section>

  <script>
    function goDashboard() {
      window.location.href = "/admin";
    }
  </script>

  <%- include("../../views/partials/admin/footer") %>
